<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <directory name="tests"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin"/>
    </plugins>
    <issueHandlers>
        <MissingConstructor>
            <errorLevel type="suppress">
                <file name="tests/Storage/S3Test.php" />
                <file name="tests/EventListener/ImageVariations/Storage/S3Test.php" />
            </errorLevel>
        </MissingConstructor>
        <TooManyArguments>
            <errorLevel type="suppress">
                <referencedFunction name="Aws\MockHandler::append" />
            </errorLevel>
        </TooManyArguments>
    </issueHandlers>
</psalm>
